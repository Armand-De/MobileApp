<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.SignUpActivity"
    android:background="#f5f6f8">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="2.5"
                    android:layout_gravity="top"
                    android:background="#2d665f">

                    <ImageView
                        android:id="@+id/sign_up_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/ic_logo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <ImageView
                        android:layout_width="113dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_apptitle"
                        android:scaleType="fitCenter"
                        app:layout_constraintBottom_toBottomOf="@id/sign_up_logo"
                        app:layout_constraintLeft_toRightOf="@id/sign_up_logo"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7.5"
                    android:elevation="3dp"
                    android:background="#f3f2f1">

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="닉네임"
                        android:fontFamily="@font/notosanskrm"
                        android:includeFontPadding="false"
                        android:textSize="14sp"
                        android:textColor="#2D665F"
                        android:layout_marginLeft="30dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="0.07"/>
                    <EditText
                        android:id="@+id/nickname_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="8"
                        android:hint="닉네임"
                        android:fontFamily="@font/notosanskrr"
                        android:includeFontPadding="false"
                        android:textColor="#3d3d3d"
                        android:textSize="14sp"
                        android:textColorHint="#BEBEBE"
                        android:backgroundTint="#BEBEBE"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="120dp"
                        app:layout_constraintTop_toBottomOf="@+id/nickname"
                        />

                    <TextView
                        android:id="@+id/nick_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="@font/notosanskrr"
                        android:includeFontPadding="false"
                        android:text="3자 이상 8자 이하로 입력해주세요"
                        android:textSize="12sp"
                        android:textColor="#C75D5D"
                        app:layout_constraintTop_toBottomOf="@id/nickname_edit"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <Button
                        android:id="@+id/check_nick_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중복확인"
                        android:fontFamily="@font/notosanskrm"
                        android:includeFontPadding="false"
                        android:textColor="#2d665f"
                        android:background="@drawable/round_line_btn"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:layout_marginRight="30dp"
                        app:layout_constraintTop_toTopOf="@id/nickname_edit"
                        app:layout_constraintLeft_toRightOf="@id/nickname_edit"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        />

                    <TextView
                        android:id="@+id/password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="비밀번호"
                        android:fontFamily="@font/notosanskrm"
                        android:includeFontPadding="false"
                        android:textSize="14sp"
                        android:textColor="#2D665F"
                        android:layout_marginLeft="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/nickname_edit"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="0.0"/>
                    <EditText
                        android:id="@+id/password_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="비밀번호"
                        android:fontFamily="@font/notosanskrr"
                        android:includeFontPadding="false"
                        android:textColor="#3d3d3d"
                        android:textSize="14sp"
                        android:textColorHint="#BEBEBE"
                        android:backgroundTint="#BEBEBE"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/password"
                        />

                    <TextView
                        android:id="@+id/pass_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="30dp"
                        android:text="7자 이상 15자 이하로 입력해주세요"
                        android:fontFamily="@font/notosanskrr"
                        android:includeFontPadding="false"
                        android:textSize="12sp"
                        android:textColor="#C75D5D"
                        app:layout_constraintTop_toBottomOf="@id/password_edit"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <TextView
                        android:id="@+id/password_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="비밀번호 확인"
                        android:fontFamily="@font/notosanskrm"
                        android:includeFontPadding="false"
                        android:textSize="14sp"
                        android:textColor="#2D665F"
                        android:layout_marginLeft="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/password_edit"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="0.0"/>
                    <EditText
                        android:id="@+id/password_confirm_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="비밀번호 확인"
                        android:fontFamily="@font/notosanskrr"
                        android:includeFontPadding="false"
                        android:textColor="#3d3d3d"
                        android:textSize="14sp"
                        android:textColorHint="#BEBEBE"
                        android:backgroundTint="#BEBEBE"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/password_confirm"
                        />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="30dp"
                        android:text="전화번호"
                        android:fontFamily="@font/notosanskrm"
                        android:includeFontPadding="false"
                        android:textSize="14sp"
                        android:textColor="#2D665F"
                        app:layout_constraintTop_toBottomOf="@+id/password_confirm_edit"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="0.0"/>
                    <EditText
                        android:id="@+id/phone_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="'-'제외하고 입력"
                        android:fontFamily="@font/notosanskrr"
                        android:includeFontPadding="false"
                        android:maxLength="15"
                        android:textColor="#3d3d3d"
                        android:textSize="14sp"
                        android:textColorHint="#BEBEBE"
                        android:backgroundTint="#BEBEBE"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="150dp"
                        app:layout_constraintTop_toBottomOf="@+id/phone"
                        />
                    <Button
                        android:id="@+id/number_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인증번호 전송"
                        android:fontFamily="@font/notosanskrm"
                        android:includeFontPadding="false"
                        android:textColor="#2d665f"
                        android:background="@drawable/round_line_btn"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:layout_marginRight="30dp"
                        app:layout_constraintTop_toTopOf="@id/phone_edit"
                        app:layout_constraintLeft_toRightOf="@id/phone_edit"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        />

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="30dp"
                        android:text="인증번호"
                        android:fontFamily="@font/notosanskrm"
                        android:includeFontPadding="false"
                        android:textSize="14sp"
                        android:textColor="#2D665F"
                        app:layout_constraintTop_toBottomOf="@+id/phone_edit"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintVertical_bias="0.0"/>
                    <EditText
                        android:id="@+id/number_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="인증번호 입력"
                        android:fontFamily="@font/notosanskrr"
                        android:includeFontPadding="false"
                        android:textColor="#3d3d3d"
                        android:textSize="14sp"
                        android:textColorHint="#BEBEBE"
                        android:backgroundTint="#BEBEBE"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/number"
                        />

                    <Button
                        android:id="@+id/sign_up_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="50dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/white_round_btn"
                        android:text="회원가입"
                        android:fontFamily="@font/notosanskrm"
                        android:includeFontPadding="false"
                        android:textSize="20sp"
                        android:textColor="#2d665f"
                        app:layout_constraintTop_toBottomOf="@id/number_edit"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        />

                    <Button
                        android:id="@+id/sign_in_intent_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="50dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/round_btn"
                        android:text="로그인"
                        android:fontFamily="@font/notosanskrm"
                        android:includeFontPadding="false"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@id/sign_up_btn"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>